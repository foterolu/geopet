<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SinglePost">
    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </include>

    <TextView
        android:id="@+id/nombrePublicacionId"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descripcionId"
        android:layout_below="@+id/nombrePublicacionId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tipoAnimalId"
        android:layout_below="@+id/descripcionId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/razaId"
        android:layout_below="@+id/tipoAnimalId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_below="@+id/razaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/comunaString"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Comuna:"
            android:textColor="#070707"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/comunaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#070707"
            android:textSize="13sp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/contactoString"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Contacto:"
            android:textColor="#070707"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/contactoID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#070707"
            android:textSize="13sp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />


    </LinearLayout>




    <Button
        android:id="@+id/chatButton"
        android:text="Chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2">

    </Button>

</RelativeLayout>